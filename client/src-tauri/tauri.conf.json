{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Bedrock Voice Chat",
  "version": "0.1.0",
  "identifier": "com.alaydriem.bvc.client",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "Bedrock Voice Chat",
        "width": 1355,
        "height": 800
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "android": {
       "minSdkVersion": 35
    },
    "iOS": {
      "minimumSystemVersion": "26.0",
      "infoPlist": "./Info.plist"
    },
    "createUpdaterArtifacts": true,
    "resources": [
      "data.json"
    ],
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "deep-link": {
      "mobile": [
        { "scheme": ["bedrock-voice-chat"] }
      ],
      "desktop": {
        "schemes": ["bedrock-voice-chat"]
      }
    },
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDUyMjJCRTQ1MzAzOTFEQkQKUldTOUhUa3dSYjRpVW5DRmtWVjJyeUlnZ282cjV4OHpnK1o0WjZyNm5lZUNmTXl4OUFUZStUakoK",
      "endpoints": [
        "https://github.com/alaydriem/bedrock-voice-chat/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
