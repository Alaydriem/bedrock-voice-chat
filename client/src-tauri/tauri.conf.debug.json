{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "bedrock-voice-chat-client",
  "version": "0.1.0",
  "identifier": "com.alaydriem.bvc.client",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "bedrock-voice-chat-client",
        "width": 1355,
        "height": 800
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "resources": [
      "data.json"
    ],
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "deep-link": {
      "mobile": [
        { "scheme": ["bedrock-voice-chat"] },
        { "host": "bvc.alaydriem.com", "scheme": ["https"], "pathPrefix": ["auth"] }
      ],
      "desktop": {
        "schemes": ["bedrock-voice-chat"]
      }
    }
  }
}
