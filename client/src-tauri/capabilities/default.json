{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "deep-link:default",
    "store:default",
    "os:default",
    "log:default",
    "fs:default",
    "fs:read-all",
    "fs:write-all",
    "fs:allow-exists",
    "fs:allow-mkdir",
    "http:allow-fetch-read-body",
    {
      "local": true,
      "windows": ["*"],
      "identifier": "http:default",
      "allow": [
        {
          "url": "https://**/*"
        },
        {
          "url": "https://**"
        },
        {
          "url": "https://*:*"
        }
      ]
    },
    {
      "identifier": "fs:scope",
      "allow": ["**/*"]
    }
  ]
}
